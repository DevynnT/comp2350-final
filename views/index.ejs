<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Purchase Items</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <script src="https://kit.fontawesome.com/f47a729ebe.js" crossorigin="anonymous"></script>
</head>

<body>
  <section class="section">
    <div class="maincolumns columns is-desktop is-vcentered">
      <div class="column is-10 is-offset-1 notification is-info is-light box container">
        <div class="title">
          Purchase Items
        </div>
        <% if (locals.allItems) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th> Name </th>
                  <th> Description </th>
                  <th> Cost </th>
                  <th> Quantity </th>
                  <th> &nbsp; </th>
                  <th> &nbsp; </th>
                  <th> &nbsp; </th>
                </tr>
              </thead>
              <% let i=0; %>
                <% for(i=0; i < allItems.length; i++) { %>
                    <td>
                      <%= allItems[i].item_name %>
                    </td>
                    <td>
                      <%= allItems[i].item_description %>
                    </td>
                    <td>
                      <%= allItems[i].cost %>
                    </td>
                    <td>
                      <%= allItems[i].quantity %>
                    </td>
                    <td>
                      <a href="/addQuantity?id=<%= allItems[i].purchase_item_id %>">
                        <i class="fas fa-caret-square-up"></i>
                      </a>
                    </td>
                    <td>
                      <a href="/removeQuantity?id=<%= allItems[i].purchase_item_id %>">
                        <i class="fas fa-caret-square-down"></i>
                      </a>
                    </td>
                    <td>
                      <a href="/deleteItem?id=<%= allItems[i].purchase_item_id %>">
                        <i class="fas fa-trash"></i>
                      </a>
                    </td>
                  </tr>
                  <% } %>
                    <tfoot>
                      <tr>
                        <td colspan="4">
                          There are <%= i %> items for a total of $<%= price %>.
                        </td>
                      </tr>
                    </tfoot>
            </table>
          </div>
          <% } %>
      </div>
    </div>
    <form action="addItem" method="post">
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Add New Item</label>
        </div>
        <div class="field-body">
          <div class="field">
            <p class="control is-expanded">
              <input name="item_name" class="input" type="text" placeholder="Name">
            </p>
          </div>
          <div class="field">
            <p class="control is-expanded">
              <input name="description" class="input" type="text" placeholder="Description">
            </p>
          </div>
          <div class="field">
            <p class="control is-expanded">
              <input name="cost" class="input" type="text" placeholder="Cost">
            </p>
          </div>
          <div class="field">
            <p class="control is-expanded">
              <input name="quantity" class="input" type="text" placeholder="Quantity">
            </p>
          </div>
          <div class="field">
            <button class="button is-link">
              <span>Add</span>
              <span class="icon is-small">
                <i class="fa-solid fa-plus"></i>
              </span>
            </button>
          </div>
        </div>
      </div>
    </form>
  </section>
</body>

</html>